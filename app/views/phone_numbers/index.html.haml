%p#notice= notice
%h1 Listing Phone Numbers
%table
  %thead
    %tr
      %th Phone
      %th Area code
      %th{:colspan => "3"}
  %tbody
    - @phone_numbers.each do |phone_number|
      %tr
        %td= phone_number.phone
        %td= phone_number.area_code
        %td= link_to 'Show', phone_number
        %td= link_to 'Edit', edit_phone_number_path(phone_number)
        %td= link_to 'Destroy', phone_number, method: :delete, data: { confirm: 'Are you sure?' }
%br/
= link_to 'New Phone number', new_phone_number_path
